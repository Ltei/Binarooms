<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <lteii._10rooms.utils.colorPicker.PickingDialogColorView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/picked_color_view"/>

    <SeekBar
        android:id="@+id/red_seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="24dp"
        android:progress="100"
        android:progressTint="@color/colorRED"
        android:thumbTint="@color/colorRED" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="50"
        android:progressTint="@color/colorGREEN"
        android:thumbTint="@color/colorGREEN"
        android:id="@+id/green_seekBar" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingBottom="16dp"
        android:progress="50"
        android:progressTint="@color/colorBLUE"
        android:thumbTint="@color/colorBLUE"
        android:id="@+id/blue_seekBar"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_default"
        android:text="@string/btn_ok"
        android:id="@+id/ok_button"/>

</LinearLayout>